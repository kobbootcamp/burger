<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="dadHands">READY TO EAT</div>
            
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <div class="burgerBox">
                    {{burger_name}}
                    <button class="devourIt btn" data-id="{{id}}" data-devoured="{{devoured}}">DEVOUR IT!
                    </button>

                </div>

                {{/unless}}
                {{/each}}
            </ul>


        </div>

        <div class="col-md-6">

            <div class="dadHands">DEVOURED</div>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <div class="emptyPlate">
                    {{burger_name}}
                </div>

                {{/if}}
                {{/each}}
            </ul>
        </div>


    </div>

    <div class="row">
        <div class="col-md-12" id="orderTitle" <h2>Order a Burger</h2>
            <form class="create-form">

                <div class="form-group" id="newburgerbox">
                    <label id="namelabel" for="newBurger">Name of burger:</label>
                    <input type="text" id="newBurger" name="name">
                </div>


                <button class="btn" type="submit">ADD BURGER</button>
            </form>
        </div>
    </div>

    <div class="row">


    </div>

</div>